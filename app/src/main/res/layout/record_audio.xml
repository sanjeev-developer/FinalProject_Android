<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">



    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:elevation="40dp"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/gifcolor"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_selectage"
                android:gravity="center"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="250dp"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/txt_age"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/regular"
                    android:text="Record Audio"/>

                <ImageView
                    android:id="@+id/cross_dialog"
                    android:layout_width="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="25dp"
                    android:src="@drawable/cross"/>

            </LinearLayout>



            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/blackwave"
                android:scaleType="fitXY"/>



            <LinearLayout
                android:layout_marginBottom="10dp"
                android:id="@+id/ll_music_player"
                android:visibility="gone"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:29"
                    android:textColor="@color/white"
                    android:id="@+id/txt_time" />


                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/play_audio"
                        android:src="@drawable/music_play"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />


                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/stop_music"
                        android:src="@drawable/music_stop"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_audio_recorder"
                android:visibility="visible"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Chronometer
                    android:visibility="visible"
                    android:text="00:00"
                    android:id="@+id/chronometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/regular"
                    android:textSize="30dp" />



                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/start_audio"
                    android:visibility="visible"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/record_audio"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/stop_audio"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/record_stop"/>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_reset_submit"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/but_submit_audio"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/cardcolor"
                    android:gravity="center"
                    android:weightSum="1">


                    <TextView
                        android:textColor="@color/white"
                        android:fontFamily="@font/regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textSize="17dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/but_reset"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/transgrey"
                    android:gravity="center"
                    android:weightSum="1">


                    <TextView
                        android:fontFamily="@font/regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:textColor="@color/white"
                        android:textSize="17dp" />


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>

