<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/greytone"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="id = "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_iddata"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:text="20th january 2010"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/light"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Title = "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_titledata"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:text="20th january 2010"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/light"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Text = "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_notedata"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:text="20th january 2010"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/light"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Category = "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_catdata"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:text="20th january 2010"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/light"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Audio data = "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_auddata"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:text="20th january 2010"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/light"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Image data = "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_imgdata"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:text="20th january 2010"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:fontFamily="@font/light"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Latitiude = "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_latdata"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:text="20th january 2010"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/light"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Longitude = "
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_longdata"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:text="20th january 2010"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/light"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>